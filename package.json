{
  "name": "pokedex",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Full-stack Pok√©dex monorepo (Angular + Hono + PostgreSQL)",
  "scripts": {
    "dev:backend": "pnpm --filter @pokedex/backend dev",
    "dev:frontend": "pnpm --filter @pokedex/frontend dev",
    "build": "pnpm -r build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,html,css,scss}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
